@model AutismAppJam.Models.DashboardModel

@{
    ViewBag.Title = "Dashboard";
}

<style>

    .body {
        margin-top: 6em;
    }

    button {
        margin: 1em;
    }

    .centerJumbo {
        text-align: center;
        background-color: #FFFFFF;
    }

    .type {
        margin: 0;
    }

    .subtype {
        margin-top: 17px;
    }

    .description {
        margin-top: 22px;
    }

    .occupationalTitle {
        font-size:12px;
        font-weight: bold;
    }

    .occupational {
        font-size:12px;
    }

</style>

<div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-lg-2">
                <h2>@Model.User.UserName</h2>
                <!--Sidebar content-->
                <img src="http://4.bp.blogspot.com/-8YBb5R5WDMI/T9JSlpwadKI/AAAAAAAAAWU/Z1lBDy3onms/s1600/sashimiSalmonTuna.jpg" alt="@User.Identity.Name" class="img-thumbnail img-responsive center-block"/>
                <button type="button" class="btn btn-default active">Profile</button>
                <button type="button" class="btn btn-default">Video Archive</button>
                <button type="button" class="btn btn-default">Interview Prep</button>
                <button type="button" class="btn btn-default">Career Stories</button>
                
            </div>
            <div class="col-lg-10">
                <br />
                <br />
                <!--Body content-->
                
                @if (Model.User.PersonalityType == null)
                {
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <div class="jumbotron centerJumbo">
                                <h1>Let's get started!</h1>
                                <p>Welcome to Craft! The first thing you should do is take the personality test. It is the first step to determining the career that fits you!</p>
                                <p>@Html.ActionLink("Take the Test", "Index", "MBTITest", null, new { @class = "btn btn-primary btn-lg" })</p>
                            </div>


                        </div>
                    </div>
                }
                else
                {
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <div class="container-fluid">
                                <div class="row-fluid">
                                    <div class="col-lg-3">
                                        <h1 class="type">TYPE: @Model.Personality.PersonalityType</h1>
                                    </div>
                                    <div class="col-lg-3 subtype">
                                        <h3 class="type"><q>@Model.Personality.PersonalityName</q></h3>
                                    </div>
                                    <div class="col-lg-6 description">
                                        <h6 class="type">@Model.Personality.PersonalityDescription </h6>
                                    </div>
                                </div>
                                <br />
                                <br />
                                <hr />
                                <div class="row-fluid">
                                    <div class="col-lg-6">
                                        <h5>Occupation Matches</h5>
                                        @foreach (var occupation in Model.OccupationalTrends)
                                        {
                                            <p class="occupationalTitle">@occupation.Occupation</p>
                                            <p class="occupational">
                                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer sit amet orci eros. Integer nec ipsum vulputate velit euismod rutrum vitae id elit. Aliquam erat volutpat. Nullam leo lacus, mollis in auctor id, pellentesque sit amet enim. Vestibulum in ligula vitae arcu tincidunt finibus non a mauris. Nulla nec ex pulvinar, scelerisque elit quis, efficitur nulla. Interdum et malesuada fames ac ante ipsum primis in faucibus. Suspendisse potenti. Quisque vitae elit eros. Curabitur maximus accumsan neque, a euismod eros tempor interdum. Pellentesque quis ex tellus. Sed lacinia maximus nibh. Aenean a dapibus purus. Cras non iaculis felis, ut eleifend ligula. Pellentesque eget ligula blandit, suscipit diam ac, lacinia tortor.
                                            </p>
                                        }
                                    </div>
                                    <div class="col-lg-6">
                                        <h1>hi</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </div>
</div>
